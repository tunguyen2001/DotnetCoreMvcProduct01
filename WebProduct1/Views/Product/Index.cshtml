@*@model WebProduct1.Models.Product*@

@model List<Product>

@{
    ViewData["Title"] = "Index";
    var categories = ViewData["category"] as List<Category>;
    var products_ = @Model;
    var productSearch = ViewData["productSearch"] as ProductSearch;
}

    <h1>Index</h1>

    <form class="row g-3" method="get" asp-action="Index"  >
        <div class="input-group">
            <div class="col-auto">
                <input type="text" class="form-control" id="Keyword" name="Keyword" 
                    value="@productSearch.Keyword" placeholder="Keyword">
            </div>

            <div class="col-auto">
                <select class="form-control" id="categoryId" name="categoryId">
                    <option value="null"> All Categories </option>
                    @foreach (var item in categories)
                {
                    if(@item.Id == productSearch.categoryId)
                {
                        <option value="@item.Id" selected> @item.Name </option>
                }
                else
                {
                        <option value="@item.Id" > @item.Name </option>
                }
                }
                </select>
            </div>

            <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-3">Search</button>
            </div>

        </div>
    </form>
        

    <a class="btn btn-primary" asp-action="Create">Create New</a>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Size </th>
                <th>Description</th>
                <th>Price</th>
                <th>
                    Category  @*@Html.DisplayNameFor(model => model.CategoriesId)*@
                </th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in products_) {
            <tr>
                <td>
                @item.Name  @*@Html.DisplayFor(modelItem => item.Name)*@
                </td>
                <td>@item.Size</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Category.Name</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
}


        </tbody>
    </table>
