@model WebProduct1.Models.Product

@{
    ViewData["Title"] = "Delete";
    var products = Model;
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @products.Name
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class = "col-sm-10">
            @products.Size
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @products.Description
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @products.Price
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriesId)
        </dt>
        <dd class = "col-sm-10">
            @products.CategoriesId
        </dd>
    </dl>
    
    <form asp-action="AcceptDelete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-outline-info" asp-action="Index">Back to List</a>
    </form>
</div>
